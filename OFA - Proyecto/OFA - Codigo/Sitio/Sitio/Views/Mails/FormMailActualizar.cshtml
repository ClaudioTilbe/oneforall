@*Necesarios para utilizar la Session*@
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor
@using Sitio.Utility; @* Codigo para facilitar seleccion de Layout para Views *@

@model Sitio.Models.Mail


@{
    ViewBag.Title = "Configurar Mail";

    var UsuarioLogueado = Accessor.HttpContext.Session.GetObjectFromJson<Usuario>("UsuarioLog");

    Layout = LayoutForViewHelper.GetLayoutForView(UsuarioLogueado);
}


<h2 class="font-weight-bold mb-4">Actualizar Mail</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />

       @* <div class="form-group">
            @Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Correo)
                @Html.HiddenFor(model => model.Correo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Contraseña, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "form-control", type="password"} })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.HostServidor, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })*@

            <label class="control-label col-md-2 font-weight-bold">Host servidor</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HostServidor, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group pb-2">
            @Html.LabelFor(model => model.Puerto, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Puerto, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <hr />

        @if (!string.IsNullOrEmpty(@ViewBag.Mensaje))
        {
            <div class="alert alert-primary" role="alert">
                @ViewBag.Mensaje
            </div>
        }


        <div class="form-group mt-2 pt-2">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Actualizar" class="btn btn-success" />
            </div>
        </div>

    </div>
}



<script src="~/js/estandar.js"></script>


