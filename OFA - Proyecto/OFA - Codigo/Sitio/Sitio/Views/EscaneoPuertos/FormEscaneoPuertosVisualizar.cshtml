                <dt class="mb-3">
                    Creador:
                </dt>

            </dl>
        </div>
        <div class="col-6">
            <dl class="dl-horizontal">

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.AdministradorReg.UsuarioID)
                </dd>

            </dl>
