@model Sitio.Models.Grupo


@*Necesarios para utilizar la Session*@
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor
@using Sitio.Utility; @* Codigo para facilitar seleccion de Layout para Views *@

@{
    ViewBag.Title = "Eliminar Grupo";

    var UsuarioLogueado = Accessor.HttpContext.Session.GetObjectFromJson<Usuario>("UsuarioLog");

    Layout = LayoutForViewHelper.GetLayoutForView(UsuarioLogueado);
}


<div class="row mb-3">
    <div class="col-6">
        <h2 class="font-weight-bold">Eliminar Grupo</h2>
    </div>
</div>

<hr /> @*Separador ============================================================================================*@

@if (!string.IsNullOrEmpty(@ViewBag.Mensaje))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Mensaje
    </div>
}

<div>

    <div class="row mt-4">
        <div class="col-3">
            <dl class="dl-horizontal">

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Codigo)
                </dt>

                <dt class="mb-3">
                    @*@Html.DisplayNameFor(model => model.NombreGrupo)*@
                    Nombre grupo
                </dt>

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

            </dl>
        </div>

        <div class="col-3">
            <dl class="dl-horizontal">

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Codigo)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.NombreGrupo)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

            </dl>
        </div>
    </div>



    <dl class="dl-horizontal mt-2">

        @*Listado Dispositivos*@
        <dt>
            @Html.DisplayNameFor(model => model.Dispositivos)
        </dt>

        <dd>
            <div class="col-md-10 pt-3 pl-0">

                @*<h4>Dispositivos asociados</h4>*@

                <table id="example" class="table table-striped table-hover border" style="width:100%">

                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Dispositivos[0].IP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Dispositivos[0].Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Dispositivos[0].Tipo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Dispositivos[0].Sector)
                        </th>
                    </tr>


                    @foreach (var item in Model.Dispositivos)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.IP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tipo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sector)
                            </td>
                        </tr>
                    }

                </table>

            </div>

        </dd>

    </dl>

    <hr /> @*Separador ============================================================================================*@

    <div class="alert alert-danger mt-3 mb-3">
        ¿Esta seguro de que desea eliminar este Grupo?
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Eliminar Grupo" class="btn btn-danger" />
            </div>
        </div>
    }

</div>



<script src="~/js/estandar.js"></script>