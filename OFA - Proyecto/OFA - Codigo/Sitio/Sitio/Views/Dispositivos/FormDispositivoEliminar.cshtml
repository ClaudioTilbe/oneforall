@model Sitio.Models.Dispositivo


@*Necesarios para utilizar la Session*@
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor
@using Sitio.Utility; @* Codigo para facilitar seleccion de Layout para Views *@

@{
    ViewBag.Title = "Eliminar Dispositivo";

    var UsuarioLogueado = Accessor.HttpContext.Session.GetObjectFromJson<Usuario>("UsuarioLog");

    Layout = LayoutForViewHelper.GetLayoutForView(UsuarioLogueado);
}


<div class="row mb-3">
    <div class="col-6">
        <h2 class="font-weight-bold">Eliminar Dispositivo</h2>
    </div>

</div>

@if (!string.IsNullOrEmpty(@ViewBag.Mensaje))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Mensaje
    </div>
}

<div>

    <hr /> @*Separador ============================================================================================*@


    <div class="row mt-4">
        <div class="col-3">
            <dl class="dl-horizontal">

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.IP):
                </dt>

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Nombre):
                </dt>

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Tipo):
                </dt>

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Conectado):
                </dt>

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Accesible):
                </dt>

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Sector):
                </dt>

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Prioridad):
                </dt>

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Permanencia):
                </dt>

                <dt class="mb-3">
                    @*@Html.DisplayNameFor(model => model.Ultimaconexion)*@
                    Ultima conexion:
                </dt>

                <dt class="mb-3">
                    @*@Html.DisplayNameFor(model => model.UltimaNotificacion)*@
                    Ultima notificacion:
                </dt>

            </dl>
        </div>

        <div class="col-3">
            <dl class="dl-horizontal">

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.IP)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Tipo)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Conectado)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Accesible)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Sector)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Prioridad)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Permanencia)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Ultimaconexion)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.UltimaNotificacion)
                </dd>

            </dl>
        </div>
    </div>

    <hr /> @*Separador ============================================================================================*@


    <div class="alert alert-danger mt-3 mb-3">
        ¿Esta seguro de que desea eliminar el Dispositivo?
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </div>
        </div>
    }

</div>



<script src="~/js/estandar.js"></script>
