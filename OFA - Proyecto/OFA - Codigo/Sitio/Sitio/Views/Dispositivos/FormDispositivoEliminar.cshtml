        </div>

        <div class="col-12 col-md-3">
            @Html.DisplayFor(model => model.IP)
        </div>

    </div>

    <div class="row mt-3">

        <div class="col-12 col-md-3 font-weight-bold mb-1 mb-md-0">
            @Html.DisplayNameFor(model => model.Nombre):
