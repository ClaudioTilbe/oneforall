@model Sitio.Models.Sucursal


@*Necesarios para utilizar la Session*@
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor
@using Sitio.Utility; @* Codigo para facilitar seleccion de Layout para Views *@

@{
    ViewBag.Title = "Eliminar Sucursal";

    var UsuarioLogueado = Accessor.HttpContext.Session.GetObjectFromJson<Usuario>("UsuarioLog");

    Layout = LayoutForViewHelper.GetLayoutForView(UsuarioLogueado);
}


<div class="row mb-3">
    <div class="col-6">
        <h2 class="font-weight-bold">Eliminar Sucursal</h2>
    </div>
</div>

<hr /> @*Separador ============================================================================================*@

@if (!string.IsNullOrEmpty(@ViewBag.Mensaje))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Mensaje
    </div>
}

<div>

    <div class="row mt-4">
        <div class="col-3">
            <dl class="dl-horizontal">

                <dt class="mb-3">
                    @* @Html.DisplayNameFor(model => model.NroSucursal): *@
                    Numero sucursal
                </dt>

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Tipo):
                </dt>

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Departamento):
                </dt>

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Calle):
                </dt>

                <dt class="mb-3">
                    @* @Html.DisplayNameFor(model => model.NumeroLocal): *@
                    Numero local
                </dt>

            </dl>
        </div>

        <div class="col-3">
            <dl class="dl-horizontal">

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.NroSucursal)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Tipo)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Departamento)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Calle)
                </dd>

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.NumeroLocal)
                </dd>

            </dl>
        </div>
    </div>


    <hr /> @*Separador ============================================================================================*@


    <div class="alert alert-danger mt-3 mb-3">
        <p>
            Si elimina esta Sucursal las entidades relacionadas tambien seran dadas de baja.<br>
            ¿Esta seguro de que desea eliminar esta Sucursal?
        </p>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </div>
        </div>
    }

</div>



<script src="~/js/estandar.js"></script>
