@model IEnumerable<Sitio.Models.MensajeMotor>

@*Necesarios para utilizar la Session*@
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor
@using Sitio.Utility; @* Codigo para facilitar seleccion de Layout para Views *@

@{
    ViewBag.Title = "Log Motor";

    var UsuarioLogueado = Accessor.HttpContext.Session.GetObjectFromJson<Usuario>("UsuarioLog");

    Layout = LayoutForViewHelper.GetLayoutForView(UsuarioLogueado);
}



<div class="row mb-3">
    <div class="col-12">
        <h2 class="font-weight-bold">Log Mensajes de error en Motor</h2>
    </div>
</div>



<hr /> @*Separador ============================================================================================*@



@if (!string.IsNullOrEmpty(@ViewBag.Mensaje))
{
    <div class="alert alert-primary" role="alert">
        @ViewBag.Mensaje
    </div>
}



@foreach (var item in Model)
{
    <div class="border border-secondary p-2 mb-3">

        <table class="table border-top-0 mb-0">
            <tbody>

                <tr>
                    <th class="border-top-0" scope="row">ID Mensaje:</th>
                    <td class="border-top-0">@Html.DisplayFor(modelItem => item.IDMensaje)</td>
                </tr>

                <tr>
                    <th scope="row">Excepcion:</th>
                    <td>@Html.DisplayFor(modelItem => item.Excepcion)</td>
                </tr>

                <tr>
                    <th scope="row">Mensaje:</th>
                    <td>@Html.DisplayFor(modelItem => item.Mensaje)</td>
                </tr>

                <tr>
                    <th scope="row">Metodo de origen:</th>
                    <td>@Html.DisplayFor(modelItem => item.MetodoOrigen)</td>
                </tr>

                <tr>
                    <th scope="row">Estado de variables:</th>
                    <td>@Html.DisplayFor(modelItem => item.EstadoVariables)</td>
                </tr>

                <tr>
                    <th scope="row">Fecha generado:</th>
                    <td>@Html.DisplayFor(modelItem => item.FechaGenerado)</td>
                </tr>

                <tr>
                    <th scope="row">Tipo:</th>
                    <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                </tr>

            </tbody>
        </table>

    </div>

}



<script src="~/js/estandar.js"></script>

