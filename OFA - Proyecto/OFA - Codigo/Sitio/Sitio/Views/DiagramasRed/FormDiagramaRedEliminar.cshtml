@model Sitio.Models.DiagramaRed


@*Necesarios para utilizar la Session*@
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor
@using Sitio.Utility; @* Codigo para facilitar seleccion de Layout para Views *@

@{
    ViewBag.Title = "Eliminar Diagrama de Red";

    var UsuarioLogueado = Accessor.HttpContext.Session.GetObjectFromJson<Usuario>("UsuarioLog");

    Layout = LayoutForViewHelper.GetLayoutForView(UsuarioLogueado);
}



<h2 class="font-weight-bold mb-4">Eliminar Diagrama de Red</h2>



<hr /> @*Separador ============================================================================================*@

@if (!string.IsNullOrEmpty(@ViewBag.Mensaje))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Mensaje
    </div>
}


<h4>Diagrama de Red</h4>



<div class="row mt-4">

    <div class="col-12 col-md-3 font-weight-bold mb-1 mb-md-0">
        @* @Html.DisplayNameFor(model => model._Sucursal.NroSucursal): *@
        Numero sucursal:
    </div>

    <div class="col-12 col-md-3">
        @Html.DisplayFor(model => model._Sucursal.NroSucursal)
    </div>

</div>

<div class="row mt-2">

    <div class="col-12 col-md-3 font-weight-bold mb-1 mb-md-0">
        @Html.DisplayNameFor(model => model.Nombre):
    </div>

    <div class="col-12 col-md-3">
        @Html.DisplayFor(model => model.Nombre)
    </div>

</div>

<div class="row mt-2">

    <div class="col-12 col-md-3 font-weight-bold mb-1 mb-md-0">
        @* @Html.DisplayNameFor(model => model.FechaSubida): *@
        Fecha de subida:
    </div>

    <div class="col-12 col-md-3">
        @Html.DisplayFor(model => model.FechaSubida)
    </div>

</div>

<div class="row mt-2">

    <div class="col-12 col-md-3 font-weight-bold mb-1 mb-md-0">
        @* @Html.DisplayNameFor(model => model.DiagramaImagen)*@
        Diagrama de red:
    </div>

    <div class="col-12 col-md-3">
        @if (!string.IsNullOrEmpty(Model.DiagramaImagenBase64))
        {
            <img src="data:image;base64,@Model.DiagramaImagenBase64" class="border p-3 img-fluid" alt="Imagen" />
        }
    </div>

</div>

  

<hr /> @*Separador ============================================================================================*@


<div class="alert alert-danger mt-3 mb-3">
    ¿Esta seguro de que desea eliminar este Diagrama de Red?
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group mt-2">
        <div class="col-md-offset-2 col-md-10 text-center">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </div>
    </div>
}




<script src="~/js/estandar.js"></script>
