                    @Html.DisplayFor(model => model.Razon)
                </dd>

            </dl>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-3">
            <dl class="dl-horizontal">

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Estado):
                </dt>

            </dl>
        </div>
        <div class="col-6">
            <dl class="dl-horizontal">

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Estado)
                </dd>

            </dl>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-3">
            <dl class="dl-horizontal">

                <dt class="mb-3">
                    @Html.DisplayNameFor(model => model.Prioridad):
                </dt>

            </dl>
        </div>
        <div class="col-6">
            <dl class="dl-horizontal">

                <dd class="mb-3">
                    @Html.DisplayFor(model => model.Prioridad)
                </dd>

            </dl>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-3">
            <dl class="dl-horizontal">

                <dt class="mb-3">
                    Cadena de salida:
                </dt>

            </dl>
        </div>
        <div class="col-6">
            <dl class="dl-horizontal">

                <dd class="mb-3">
                    <pre>
                       @*  @Html.DisplayFor(model => model.CadenaSalida) *@
                        @{
                            var cadenaSinEspacios = Model.CadenaSalida.TrimStart();
                            @cadenaSinEspacios
                        }
                    </pre>
                </dd> 

            </dl>
        </div>
